<div class="col-lg-12">
  <div class="row mx-lg-auto">
    <% @plans.each do |plan| %>
    <div class="col-lg-3">
      <div class="card" style="margin-top: 15px;">
        <div class="card-body">
          <strong><%= plan.name %></strong>
          <strong><%= plan.price %></strong>
          <div>
            <button type="button" class="btn btn-primary btn-lg" style="margin-bottom: 10px; margin-top: 10px;">Buy Now</button> 
          </div>
        </div>
      </div>
    </div>     
    <% end %>
  </div>
</div>


